    <script>
        function downloadConfig() {
            // Fetch the actual schedule file content
            fetch('/ed_sa_schedules.json')
                .then(response => response.json())
                .then(scheduleData => {
                    // Create blob and download
                    const blob = new Blob([JSON.stringify(scheduleData, null, 2)], { type: 'application/json' });
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                            a.download = 'ed_sa_schedules.json';
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                    window.URL.revokeObjectURL(url);
                    
                    // Visual feedback
                    const button = event.target;
                    const originalText = button.innerHTML;
                    button.innerHTML = '‚úÖ Downloaded';
                    button.style.background = '#00ff00';
                    button.style.color = '#000000';
                    
                    setTimeout(() => {
                        button.innerHTML = originalText;
                        button.style.background = '#16213e';
                        button.style.color = '#ffcc00';
                    }, 2000);
                })
                .catch(error => {
                    console.error('Error fetching schedule data:', error);
                    // Fallback: still provide visual feedback
                    const button = event.target;
                    button.innerHTML = '‚ùå Error';
                    button.style.background = '#ff0000';
                    button.style.color = '#ffffff';
                    
                    setTimeout(() => {
                        button.innerHTML = 'üì• Download ed_sa_schedules.json';
                        button.style.background = '#16213e';
                        button.style.color = '#ffcc00';
                    }, 2000);
                });
        }

        function initiateRedirection() {
            const button = document.querySelector('.redirect-button');
            const statusIndicator = document.querySelector('.status-indicator');
            
            // Change button state
            button.innerHTML = '‚è≥ REDIRECTING...';
            button.style.background = 'linear-gradient(45deg, #ffcc00, #ffdd33)';
            button.disabled = true;
            
            // Update status
            statusIndicator.innerHTML = '<div class="status-light" style="background: #ffcc00;"></div><span>Redirecting to COA System...</span>';
            
            // Redirect after brief delay
            setTimeout(() => {
                window.open('http://139.59.37.161/auth/login/', '_blank');
                
                // Reset button after redirect
                setTimeout(() => {
                    button.innerHTML = 'üîÑ INITIATE REDIRECT';
                    button.style.background = 'linear-gradient(45deg, #ff6600, #ff8533)';
                    button.disabled = false;
                    statusIndicator.innerHTML = '<div class="status-light"></div><span>COA System Ready</span>';
                }, 1000);
            }, 1500);
        }
    </script>
